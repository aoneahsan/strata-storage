{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist/integrations",
    "declarationDir": "./dist/types/integrations",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/integrations/**/*", "src/core/**/*", "src/plugin/**/*", "src/adapters/**/*", "src/features/**/*", "src/utils/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "tests", "examples", "docs", "scripts"]
}